*{
    box-sizing: border-box;
    margin:0;
    padding:0;
    
}
*:before,*:after{
    box-sizing: borde r-box;
}
img{
    max-width:100%;
    max-height:100%;
}
ul,ol{
    list-style:none; 
}
a{
    color:inherit;
    text-decoration: none;
}

/*style*/
body{
    border:1px solid red;
    background-color: #eee;
}
.globalHeader{
    /* border:1px solid red; */
    margin:20px;
    /* display:flex;
    justify-content: space-between; */
}
@media (min-width:500px){
    .globalHeader{
        margin:60px 0 100px ;
    }
}
.search-form{
    display:flex;
    justify-content: space-between;
    max-width:400px;

}
/* 大于500px */
@media (min-width:500px){ 
    .search-form{
        max-width:400px;
        /* 只有宽度固定或者max-mwidth时可以用这个方法剧中 */
        margin:0 auto; 
    
    }
}
@media (max-width:500px){
   
}
.search-form > input{
    width:100%;
    height:40px;
    margin-right:10px;
    padding:0 10px;
    border:none;
    border:1px solid #ddd;
    border-radius:4px;

}
.search-form > button{
    white-space:nowrap;
    padding:0 28px;
    border:none;
    background: #176AE7;
border-radius: 4px;
    color:white;
    font-size: 16px;
}
.globalMain{
    max-width:900px;
    margin-left: auto; 
    margin-right: auto; 
    /* border:1px solid pink */

}
.siteList{
    /* border:1px solid green; */
    display:flex;
    flex-wrap:wrap;
    margin:20px;
    /* justify-content: space-between; */
}
@media (min-width:500px){ 
    .siteList{
     margin-left: 0px;
    margin-right: -25px; 
     
     
    }
}
.siteList > li{
    margin-bottom: 10px;
    /* border:1px solid blue; */
    justify-content: space-between;
   
}
@media (min-width:500px){
    .siteList > li{

        margin-right:25px;
    }
}
.siteList .site {
    border:1px solid #ddd;
    width:160px;
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background:white;
    border-radius:4px;
    padding:20px 0;
    position:relative;
    cursor:pointer;
    


}
.siteList .site> .logo {
    /* border:1px solid red; */
    width:64px;
    height:64px;
    display:flex;
    justify-content:center;
    align-items:center;
    font-size:64px;

}
.siteList  .site>.link {
    font-size: 14px;
    margin-top:4px;

}
.siteList .site> .close {
    position:absolute;
    right:10px;
    top:5px;
    display:none;

}
.siteList .site:hover .close {
  display: block;
  cursor:default;
}
.siteList .addButton {
  width:160px;
  border:1px solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding:20px 0;
}
.siteList .addButton .icon{
    width:56px;
    height:64px
  }
  .siteList  .addButton .text {
    font-size: 14px;
    margin-top:4px;

}

.siteList .addButton .icon-wrapper{
    /* border:1px solid green; */
    width:56px;
    height:64px;
    display:flex;
    justify-content: center;
    align-items:center;

}



